<ul class="list-group">
  <li class="list-group-item"><%= t('user.username') %>: <%= @user.username %></li>
  <li class="list-group-item"><%= t('user.first_name') %>: <%= @user.first_name.capitalize %></li>
  <li class="list-group-item"><%= t('user.last_name') %>: <%= @user.last_name.capitalize %></li>
  <li class="list-group-item"><%= t('user.email') %>: <%= @user.email %></li>
  <% if current_user.admin? %>
      <li class="list-group-item"><%= t('user.status') %>: <%= t('user.admin') %> </li>
  <% end %>
</ul>
