<div class="container">
  <div class="page-header">
    <div class="row">
      <h1 class="text-center"><%= t('header.my_recipes') %></h1>
    </div>
  </div>
  <div class="row text-center">
    <%= link_to 'Add new recipe', new_recipe_path, class: 'btn btn-success' %>
  </div>

  <h3 class="text-center">Created Recipes</h3>
  <% @created_recipes.each do |recipe| %>
      <div class="row">
        <%= link_to recipe_path(recipe) do %>
            <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
              <div class="panel panel-default">
                <div class="panel-body">
                  <div class="media">
                    <div class="media-left media-middle">
                      <%= image_tag(recipe.picture_url, :alt => "recipes", class: "media-object img-rounded", width: "80", height: "60") %>
                    </div>
                    <div class="media-body">
                      <h4 class="media-heading text-center"><%= recipe.name %></h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>

  <h3 class="text-center">Saved Recipes</h3>
  <% @recipes.each do |recipe| %>
      <div class="row">
        <%= link_to recipe_path(recipe) do %>
            <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
              <div class="panel panel-default">
                <div class="panel-body">
                  <div class="media">
                    <div class="media-left media-middle">
                      <%= image_tag(recipe.picture_url, :alt => "recipes", class: "media-object img-rounded", width: "80", height: "60") %>
                    </div>
                    <div class="media-body">
                      <h4 class="media-heading text-center"><%= recipe.name %></h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>
</div>